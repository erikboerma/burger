<div class="container">

    <h1>Burger Time!</h1>
<div class="row">
    <div class="col-md-4">
        <h2>Me so hungry!</h2>
        <ul>
            {{#each burger_name}}
            {{#unless devoured}}
            {{> burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-4">

        <h2>Me so full!</h2>

        <ul>
            {{#each burger_name}}
            {{#unless devoured}}
            {{> burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    </div>
    <div class="col-md-4">

        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="burgers">Burger Name:</label>
                <input type="text" id="burgers" name="burger_name">
                <button type="submit">Add Burger</button>
            </div>
        </form>
    </div>
</div>